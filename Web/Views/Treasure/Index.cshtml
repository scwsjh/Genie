@model List<genie_treasure>
@{
    int count = 1;
}
<div class="module-title">
    <Abar sid="@ViewBag.MySid" href="/Index/Index">精灵主页</Abar>&gt;藏宝阁
</div>
<div class="content">
    <div class="list">
        @foreach (var item in Model)
        {
            <div class="row">
                @string.Format("{0}.", count)
                <Abar sid="@ViewBag.MySid" href="/Treasure/Info/@item.id">@item.name</Abar>
            </div>
            count++;
        }
        @if (Model.Count == 0)
        {
            <span>暂无宝物.</span>
        }
    </div>    
</div>
<Abar sid="@ViewBag.MySid" href="/Index/Index">返回精灵主页</Abar>
<div style="height:15px"></div>
