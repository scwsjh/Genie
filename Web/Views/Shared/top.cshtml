@{
    int MessageCount = ViewBag.MessageCount;
}
@if (ViewBag.IsOnLine == false)
{
    <div>
        您尚未<a href="@ViewBag.LoginUrl">登录</a>/<a href="@ViewBag.RegUrl">注册</a>
    </div>
}
else
{    
    <div>
        <a href="@ViewBag.SiteUrl/home/my_home.aspx"><img src="/image/id.gif" alt="." /><span>@ViewBag.MyNo</span></a>
        @if (MessageCount > 0)
        {
            string MsgTip = MessageCount > 100 ? "99+" : MessageCount.ToString();
            <a href="@ViewBag.SiteUrl/home/chat_new.aspx"><img src="/image/message.gif" alt="." /><span>家信(@MsgTip)</span></a>
        }
        else
        {
            <a href="@ViewBag.SiteUrl/home/my_home.aspx"><img src="/image/home.gif" alt="." /><span>家园</span></a>
        }
        <a href="@ViewBag.SiteUrl/blog/user/my_blog.aspx"><img src="/image/blog.gif" alt="." /><span>空间</span></a>
    </div>
}