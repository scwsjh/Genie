@model List<genie_user_genie>
@{
    int count = 1;
    int type = ViewBag.Type;
}
<div class="module-title">
    <Abar sid="@ViewBag.MySid" href="/Index/Index">精灵主页</Abar>&gt;我的精灵    
</div>
<div class="module-content">
    *您当前共拥有<strong>@ViewBag.Total</strong>只[@GenieTool.GetGenieTypeTips(Convert.ToInt32(ViewBag.Type))]精灵.<br />
    类型：<Acheak sid="@ViewBag.MySid" href="/Genie/Index?t=1" on-cheak="1" on-value="@type">普通</Acheak>|
    <Acheak sid="@ViewBag.MySid" href="/Genie/Index?t=2" on-cheak="2" on-value="@type">精英</Acheak>|
    <Acheak sid="@ViewBag.MySid" href="/Genie/Index?t=3" on-cheak="3" on-value="@type">珍稀</Acheak>|
    <Acheak sid="@ViewBag.MySid" href="/Genie/Index?t=4" on-cheak="4" on-value="@type">传说</Acheak>
    <div class="list">
        @foreach (var item in Model)
        {
            <div class="row">
                @Html.Raw(((ViewBag.PageIndex - 1) * ViewBag.PageSize + count).ToString() + ".")
                <Abar sid="@ViewBag.MySid" href="/Genie/Info?gu=@item.id">@item.name</Abar>
                @string.Format("({0}级,{1}星)", item.lev, item.start)
            </div>
            count++;
        }
    </div>
    @if (Model.Count == 0)
    {
        <span>暂无精灵,去召唤一下吧?</span>
    }
</div>
<PageBar page-class="content" page-size="@ViewBag.PageSize" page-Total="@ViewBag.Total" page-Url="@RequestHelper.GetRequestUrl(ViewContext.HttpContext.Request)"></PageBar>
<Abar sid="@ViewBag.MySid" href="/Index/Index">返回精灵主页</Abar>
<div style="height:30px"></div>
<div>    
    <Abar sid="@ViewBag.MySid" href="/Index/Index">精灵主页</Abar>&gt;我的精灵
</div>